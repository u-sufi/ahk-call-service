    {
      "name": "Agents",
      "item": [
        {
          "name": "Create Agent",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.collectionVariables.set('agentId', jsonData.data.id);",
                  "    pm.collectionVariables.set('agentExtension', jsonData.data.extension);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"extension\": \"1020\",\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"callerIdName\": \"John Doe\",\n    \"callerIdNumber\": \"1020\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/agents",
              "host": ["{{baseUrl}}"],
              "path": ["agents"]
            },
            "description": "Create a new agent/extension. Returns credentials for WebRTC/SIP client."
          }
        },
        {
          "name": "List All Agents",
          "request": {
            "method": "GET",
