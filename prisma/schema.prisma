// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Agents (people who make/receive calls)
model Agent {
  id              String   @id @default(uuid())
  extension       String   @unique @db.VarChar(10)
  password        String   @db.VarChar(255)
  name            String   @db.VarChar(100)
  email           String?  @db.VarChar(255)
  callerIdName    String?  @map("caller_id_name") @db.VarChar(100)
  callerIdNumber  String?  @map("caller_id_number") @db.VarChar(20)
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  status      AgentStatus?
  callRecords CallRecord[]

  @@map("agents")
}

// Inbound Routes (which DID goes to which agent)
model InboundRoute {
  id                   String   @id @default(uuid())
  didNumber            String   @unique @map("did_number") @db.VarChar(20)
  destinationExtension String   @map("destination_extension") @db.VarChar(10)
  description          String?  @db.VarChar(255)
  isActive             Boolean  @default(true) @map("is_active")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  @@map("inbound_routes")
}

// Call Records (CDR)
model CallRecord {
  id                String    @id @default(uuid())
  uuid              String    @unique @db.VarChar(100)
  callerIdName      String?   @map("caller_id_name") @db.VarChar(100)
  callerIdNumber    String?   @map("caller_id_number") @db.VarChar(50)
  destinationNumber String?   @map("destination_number") @db.VarChar(50)
  direction         String?   @db.VarChar(20) // 'inbound' or 'outbound'
  startTime         DateTime? @map("start_time")
  answerTime        DateTime? @map("answer_time")
  endTime           DateTime? @map("end_time")
  duration          Int       @default(0)
  billsec           Int       @default(0)
  hangupCause       String?   @map("hangup_cause") @db.VarChar(50)
  recordingPath     String?   @map("recording_path") @db.VarChar(500)
  agentExtension    String?   @map("agent_extension") @db.VarChar(10)
  createdAt         DateTime  @default(now()) @map("created_at")

  // Relations
  agent   Agent?  @relation(fields: [agentId], references: [id])
  agentId String? @map("agent_id")

  @@map("call_records")
}

// Agent Status (online/offline tracking)
model AgentStatus {
  id           String    @id @default(uuid())
  status       String    @default("offline") @db.VarChar(20) // 'online', 'offline', 'busy', 'away'
  registeredAt DateTime? @map("registered_at")
  lastSeen     DateTime? @map("last_seen")
  userAgent    String?   @map("user_agent") @db.VarChar(255)
  registeredIp String?   @map("registered_ip") @db.VarChar(50)

  // Relations
  agent   Agent  @relation(fields: [agentId], references: [id], onDelete: Cascade)
  agentId String @unique @map("agent_id")

  @@map("agent_status")
}
